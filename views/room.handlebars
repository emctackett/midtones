<div class="container mt-3">
  <div class="row">
    <h2 class="text-left" id="welcome">Welcome to your reading room! You are reading {{title}}.</h2>
    <!-- <span id = "displayId" hidden></span> -->
    <!--<input type="text" id="connId" class="form-control" placeholder"enter connection id" required>
    <button type="button" id='conn_button' class="btn btn-success">Connect</button>-->
    <button type="button" id='call_button' class="btn btn-success btn-lg text-center" data-connected="false">
      Video Chat with Reader
    </button>
    </div>
  </div>
</div>


<div class="video-container float">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-8">
      <video autoplay class="img-thumbnail text-right" id="remote-video" style="height: 100%"></video>
    </div>
    <div class="col-2">
      <video autoplay class="img-thumbnail text-left" id="local-video" style="height:20%" style="float: right" muted></video>
    </div>
    <div class="col-1"></div>
  </div>
</div>

<div id="storyCarousel" class="carousel slide carousel-fade young-passion-gradient" data-wrap="false" data-interval="false">
  <ol class="carousel-indicators">
    <li data-target="#storyCarousel" data-slide-to="0" class="active"></li>
    {{#each text}}
    <li data-target="#storyCarousel" data-slide-to="{{@index_1}}"></li>
    {{/each}}
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <div class="jumbotron jumbotron-fluid mb-0 young-passion-gradient">
        <h1 class="display-4 text-center ml-5 mr-5">{{title}}</h1>
      </div>
    </div>
    {{#each text}}
    <div class="carousel-item">
      <div class="jumbotron jumbotron-fluid mb-0 young-passion-gradient">
        <h3 class="display-4 text-center ml-5 mr-5">{{this}}</h3>
      </div>
    </div>
    {{/each}}

  </div>
  <a class="carousel-control-prev ml-1" href="#storyCarousel" role="button" data-slide="prev" id="prevButton" hidden>
    <span class="carousel-control-prev-icon ml-1" aria-hidden="true" style="text-align: left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next mr-1" href="#storyCarousel" role="button" data-slide="next" id="nextButton" hidden>
    <span class="carousel-control-next-icon mr-1" aria-hidden="true" style="text-align: right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>



<h1 style="visibility: hidden" id='bookTitle'>{{room.title}}</h1>
<h1 style="visibility: hidden" id='readerId'>{{room.reader}}</h1>
<h1 style="visibility: hidden" id='listenerId'>{{room.listener}}</h1>
